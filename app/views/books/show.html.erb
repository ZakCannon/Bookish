<h1 class="title"><%=@book.title %></h1>

<div class="box">
  <h2 class="subtitle">Book information</h2>

  <div class="content">
    <dl>
      <dt>Author</dt>
      <dd><%=@book.author %></dd>
      <dt>ISBN</dt>
      <dd><%=@book.isbn %></dd>
      <dt>Record created at:</dt>
      <dd><%=@book.created_at %></dd>
      <dt>Record last updated at:</dt>
      <dd><%=@book.updated_at %></dd>
    </dl>
  </div>
</div>

<div class="box">
  <h2 class="subtitle">Copy information</h2>

  <%(0..(@copies.size-1)).each do |i|%>
    <li>
      <%if @copies[i] == nil || @copies[i].borrower.length == 0%>
        <%="Copy #{i+1} is available" %>
      <%else %>
        <%="Copy #{i+1} borrowed by #{@copies[i].borrower}" %>
      <%end %>
    </li>
  <% end %>
</div>


<h2 class="subtitle">Actions</h2>

<button class="button"><%= link_to "Edit this book's info", edit_book_path(@book) %></button>
<button class="button"><%= link_to "View detailed copy info of this book", "#{@book_id}/copy_edit" %></button>
<button class="button"><%= link_to "Back to books", books_path %></button>
<%= button_to "Destroy this book", @book, method: :delete, class:"button is-danger mt-3" %>
